<div class="index-wrapper text-center">

  <div class="container">
      <div class="row">

        <% @flats.each do |flat| %>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= link_to flat_path(flat) do %>
              <div class="card-wrapper">
                  <% if flat.photo? %>
                    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path flat.photo.path %>');">
                  <% else %>
                    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://unsplash.it/200/300');">
                  <% end %>
                  <div class="card-category">
                    <h2><%= flat.title %></h2>
                  </div>
                  <div class="card-description">
                    <!-- #maybe something -->
                  </div>
                </div>
              </div>
            <% end %>
          </div>

        <% end %>
      </div>
  </div>

</div>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <script>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>


