<% content_for :title, @flat.title.capitalize %>



<!-- testing git, i want to see sth. -->
<div class="banner-show-flat">
  <div class="banner" style="position: center; background-size: cover; background-image: url('<%= cl_image_path @flat.photo.path %>');">
  </div>
</div>

<style>
/* Note: Try to remove the following lines to see the effect of CSS positioning */
.affix {
    top: 65px;
}
</style>

<!-- <div class="container-fluid"> -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 ">
        <%= render "helpers/description-flat" %>
        <%= render "helpers/reviews" %>
        <%= render "helpers/review-adder" if user_signed_in? %>
        <hr>
    </div>
    <div class="col-xs-12 col-sm-6 off-affix">
      <div class="booking-wrapper nav nav-pills nav-stacked" data-spy="affix" data-offset-top="235" >
        <div class="booking-price ">
          <p><i class="fa fa-bolt booking-bolt" aria-hidden="true"></i> â‚¬<%= @flat.price %> <span id="per-night">per night</span></p>
        </div>

        <div class="booking-userform">
          <%= simple_form_for [@flat, @booking] do |f| %>
          <%= f.input :start_date, required: false, label: 'Check In' %>
          <%= f.input :end_date, required: false, label: 'Check Out' %>
          <%= f.input :guests, required: false, collection: (0..10), default: 1 %>
          <%= f.submit "book", class:"btn btn-danger lg book-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>









