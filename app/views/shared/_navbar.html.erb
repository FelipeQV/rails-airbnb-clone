<div class="navbar-wagon navbar-fixed-top">

  <!-- Logo -->
  <%#= link_to root_path, class: "navbar-wagon-brand" do %>
    <%#= image_tag "logo.png", id: "logo-airbnb" %>
  <%# end %>


  <!-- left navigation -->
  <div class="logo_search">

    <!-- Logo -->
    <a href="/" class="navbar-wagon-brand">
      <img src="https://s-media-cache-ak0.pinimg.com/originals/92/bf/b7/92bfb777f072d29e4c09b6feca4e487c.png" />
    </a>

    <!-- Search form -->
    <%= render "helpers/search-navbar" %>

  </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <%= link_to "Become a host", new_flat_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to "Dashboard", pages_dashboard_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%#= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <%#= link_to "Help", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%#= image_tag , class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

          <% if current_user.photo != nil %>
            <% avatar_url = current_user.photo.path %>
            <%= cl_image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% elsif current_user.facebook_picture_url != nil %>
            <% avatar_url = current_user.facebook_picture_url %>
            <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <% avatar_url = "http://placehold.it/30x30" %>
            <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>




          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%#= link_to pages_dashboard_path do %>
                <!-- <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %> -->
              <%# end %>
            </li>
            <li>
              <%= link_to flats_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <!-- Button (call-to-action) -->
      <%#= link_to "Introduce Cocktail", new_cocktail_path, {class: "navbar-wagon-item navbar-wagon-button btn"} %>

    <!-- if user_signed_in? == false -->
    <% else %>

      <!-- Login text link -->
      <%= link_to "Become a host", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- help link -->
      <%#= link_to "Help", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- sign up link -->
      <%= link_to "Sign Up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Login text link -->
      <%= link_to "Log In", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= render "helpers/sign-in-modal" %>

    <% end %>



    <%#= link_to t(".top_call_to_action", default: "Post stuff"), "#", class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->

  <% if user_signed_in?  %>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Home", flats_path  %></li>
        <li><%= link_to "Dashboard", pages_dashboard_path  %></li>
        <li><%= link_to "Become a host", new_flat_path %></li>
        <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
<% else %>
<div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Home", flats_path  %></li>
        <li><%= link_to "Log in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
      </ul>
    </div>
  </div>

<% end %>

</div>

