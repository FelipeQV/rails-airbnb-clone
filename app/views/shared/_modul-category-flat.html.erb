<%= link_to '#SignInModal3', "data-toggle" => "modal"  do %>
<i class="fa fa-home" aria-hidden="true"></i>
<p><%= flat.category %> </p>
<% end %>

<div class="modal fade" id="SignInModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">Room type</h3>
      </div>
      <div class="modal-body text-center">
        <p>This is the room type your flat has</p>
        <p>Current category: <%= flat.category %></p>
      </div>
    </div>
  </div>
</div>
